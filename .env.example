# LLM API Configuration (Vite Environment Variables)
# Copy this file to .env and fill in your actual API credentials

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# OpenAI Configuration
VITE_LLM_API_ENDPOINT=https://api.openai.com/v1/chat/completions
VITE_LLM_API_KEY=your_openai_api_key_here
VITE_LLM_MODEL=gpt-3.5-turbo

# DeepSeek Configuration
# VITE_LLM_API_ENDPOINT=https://api.deepseek.com/v1/chat/completions
# VITE_LLM_API_KEY=your_deepseek_api_key_here
# VITE_LLM_MODEL=deepseek-chat

# OpenRouter Configuration
# VITE_LLM_API_ENDPOINT=https://openrouter.ai/api/v1/chat/completions
# VITE_LLM_API_KEY=your_openrouter_api_key_here
# VITE_LLM_MODEL=anthropic/claude-3-sonnet

# Claude/Anthropic Configuration
# VITE_LLM_API_ENDPOINT=https://api.anthropic.com/v1/messages
# VITE_LLM_API_KEY=your_claude_api_key_here
# VITE_LLM_MODEL=claude-3-sonnet-20240229

# Local LLM Configuration (e.g., Ollama)
# VITE_LLM_API_ENDPOINT=http://localhost:11434/api/chat
# VITE_LLM_API_KEY=
# VITE_LLM_MODEL=llama2

# API Configuration
VITE_LLM_TEMPERATURE=0.8
VITE_LLM_MAX_TOKENS=800
VITE_LLM_TIMEOUT=30000

# Web Search Configuration
VITE_ENABLE_WEB_SEARCH=true
VITE_WEB_SEARCH_API_KEY=your_serper_api_key_here
VITE_WEB_SEARCH_ENGINE=google

# Feature Flags
VITE_ENABLE_FALLBACK=true
VITE_ENABLE_RETRY=true
VITE_MAX_RETRIES=3
VITE_ENABLE_PDF_EXPORT=true

# Language Configuration
VITE_DEFAULT_LANGUAGE=zh
VITE_SUPPORTED_LANGUAGES=zh,en
