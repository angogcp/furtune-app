# Client-side Environment Variables Template
# Copy this file to .env and fill in your actual configuration
# 
# SECURITY NOTE: This file only contains client-side variables.
# Sensitive API keys are now handled server-side for security.
# See SECURITY_DEPLOYMENT_GUIDE.md for deployment instructions.

# Supabase Configuration (Public keys - safe to expose)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# LLM API Configuration (Client-side parameters only)
# Note: API endpoints and keys are now configured server-side in Vercel
# See SECURITY_DEPLOYMENT_GUIDE.md for server-side setup instructions

# API Configuration
VITE_LLM_TEMPERATURE=0.8
VITE_LLM_MAX_TOKENS=800
VITE_LLM_TIMEOUT=30000

# Web Search Configuration
VITE_ENABLE_WEB_SEARCH=true
VITE_WEB_SEARCH_API_KEY=your_serper_api_key_here
VITE_WEB_SEARCH_ENGINE=google

# Feature Flags
VITE_ENABLE_FALLBACK=true
VITE_ENABLE_RETRY=true
VITE_MAX_RETRIES=3
VITE_ENABLE_PDF_EXPORT=true

# Language Configuration
VITE_DEFAULT_LANGUAGE=zh
VITE_SUPPORTED_LANGUAGES=zh,en
